{
  "$schema": "https://raw.githubusercontent.com/caelestia-dots/shell/main/config.schema.json",

  "theme": {
    "name": "onyx8",
    "wallpaperDir": "~/.config/onyx8/wallpapers",
    "colors": {
      "base": {
        "base00": "#0a0a0a",
        "base01": "#121212",
        "base02": "#1a1a1a",
        "base03": "#2a2a2a",
        "base04": "#444444",
        "base05": "#666666",
        "base06": "#c9c9c9",
        "base07": "#ffffff"
      },
      "accent": {
        "red": "#8b0000",
        "redBright": "#cc0000",
        "purple": "#4a0080",
        "purpleBright": "#6a00b0",
        "blue": "#1a1a2e",
        "cyan": "#0d7377",
        "green": "#1a472a",
        "yellow": "#8b8000",
        "orange": "#8b4000"
      },
      "ui": {
        "background": "#0a0a0a",
        "backgroundAlt": "#121212",
        "foreground": "#c9c9c9",
        "foregroundDim": "#666666",
        "border": "#1a1a1a",
        "borderFocus": "#8b0000",
        "selection": "#2a2a2a"
      }
    },
    "materialYou": false,
    "customCss": ""
  },

  "bar": {
    "position": "top",
    "height": 36,
    "margin": 8,
    "opacity": 0.95,
    "modules": {
      "left": ["workspaces", "window"],
      "center": ["clock"],
      "right": ["systray", "network", "audio", "battery", "power"]
    }
  },

  "workspaces": {
    "count": 8,
    "icons": ["󰲠", "󰲢", "󰲤", "󰲦", "󰲨", "󰲪", "󰲬", "󰲮"],
    "persistent": true
  },

  "clock": {
    "format": "%H:%M",
    "formatAlt": "%A, %B %d",
    "tooltip": true
  },

  "notifications": {
    "position": "top-right",
    "maxVisible": 5,
    "timeout": 5000
  },

  "launcher": {
    "placeholder": "Search...",
    "maxResults": 8,
    "showIcons": true
  },

  "power": {
    "showBattery": true,
    "lowBatteryThreshold": 20,
    "criticalBatteryThreshold": 10
  },

  "audio": {
    "showMicrophone": true,
    "visualizer": {
      "enabled": true,
      "bars": 12
    }
  },

  "dashboard": {
    "enabled": true,
    "widgets": ["calendar", "weather", "media", "system"]
  },

  "animations": {
    "enabled": true,
    "duration": 200
  }
}
